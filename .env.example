###############################################
# ðŸŒ GENERAL CONFIGURATION
###############################################
APP_ENV=local
APP_DEBUG=true
APP_TIMEZONE=Africa/Cairo


###############################################
# ðŸƒ MONGODB CONFIGURATION
###############################################
# MongoDB connection URI
MONGO_URI=mongodb://127.0.0.1:27017

# Active logs database name
MONGO_DB_ACTIVITY=maatify_activity

# Archive database name (for quarterly backups)
MONGO_DB_ACTIVITY_ARCHIVE=maatify_activity_archive

# Active collection name (default)
MONGO_COLLECTION_ACTIVITY=user_activities


###############################################
# âš™ï¸ ARCHIVE & MAINTENANCE SETTINGS
###############################################
# Number of months after which data is archived
# (6 means data older than 6 months will be moved)
ARCHIVE_CUTOFF_MONTHS=6

# Whether to auto-create indexes for new archives
# true  => build indexes when new archive created
# false => skip index creation (for manual maintenance)
ARCHIVE_AUTO_INDEX=true

# Cron schedule example (for documentation)
# This script should run every 6 months
# e.g. 0 0 1 1,7 * php scripts/mongo-activity-archive.php
ARCHIVE_CRON_EXAMPLE="0 0 1 1,7 *"


###############################################
# ðŸ§© LOGGER INTEGRATION (OPTIONAL)
###############################################
# Enable or disable Mongo activity logging globally
MONGO_ACTIVITY_ENABLED=true

# Default module when no explicit module is provided
MONGO_ACTIVITY_DEFAULT_MODULE=system

# Default role when no actor type is provided
MONGO_ACTIVITY_DEFAULT_ROLE=system


###############################################
# ðŸª£ PERFORMANCE SETTINGS (OPTIONAL)
###############################################
# Max documents to read per batch during archival
ARCHIVE_BATCH_LIMIT=10000

# Timeout (seconds) for Mongo queries
MONGO_QUERY_TIMEOUT=30


###############################################
# ðŸ“˜ DEVELOPER NOTES
###############################################
# - The .env file is used by both the logger and archival scripts.
# - Active database stores current logs for up to ARCHIVE_CUTOFF_MONTHS.
# - Archived logs are grouped quarterly inside MONGO_DB_ACTIVITY_ARCHIVE.
# - Indexes are automatically applied for faster queries.
# - Each archive collection name pattern:
#     user_activities_archive_YYYY_QQ
#   Example: user_activities_archive_2025_0103
#
#   ðŸ”„ Workflow:
#     1. Logs inserted â†’ MONGO_DB_ACTIVITY.user_activities
#     2. After 6 months â†’ moved to archive DB (quarterly)
#     3. Indexes built once per archive
###############################################
